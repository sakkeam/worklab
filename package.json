{
	"name": "worklab",
	"version": "1.0.0",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "concurrently 'bun dev:frontend' 'bun dev:backend'",
		"dev:frontend": "bun --cwd=packages/frontend dev",
		"dev:backend": "bun --cwd=packages/backend dev",
		"build:frontend": "bun --cwd=packages/frontend run build",
		"build:backend": "bun --cwd=packages/backend run build",
		"deploy:frontend": "bun --cwd=packages/frontend deploy",
		"deploy:backend": "bun --cwd=packages/backend deploy"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"concurrently": "^9.2.1",
		"wrangler": "^4.40.2"
	}
}
